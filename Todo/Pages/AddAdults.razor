@page "/AddAdults"
@using Microsoft.AspNetCore.Components
@using global::Models
@using ToDo.Data
@inject IFamilyService FamilyService;
@inject NavigationManager NavigationManager;

<h3>AddAdults</h3>

<EditForm Model="@newAdult" OnValidSubmit="@AddNewAdult">
    <div class="form-group"> Name:<br/>
<InputText @bind-Value="newAdult.FirstName"/>
</div>
<div class="form-group"> LastName:<br/>
    <InputText rows="4" @bind-Value="newAdult.LastName"/>
</div>
<div class="form-group"> Age:<br/>
    <InputNumber rows="4" @bind-Value="newAdult.Age"/>
</div>
@*<div class="form-group"> Job Title & Salary<br/>
    <InputText rows="4" @bind-Value="newAdult.JobTitle"/>
</div>*@
<div class="form-group"> Height<br/>
    <InputNumber rows="4" @bind-Value="newAdult.Height"/>
</div>
<div class="form-group"> EyeColor<br/>
    <InputText rows="4" @bind-Value="newAdult.EyeColor"/>
</div>
<div class="form-group"> HairColor<br/>
    <InputText rows="4" @bind-Value="newAdult.HairColor"/>
</div>
<div class="form-group"> Sex<br/>
    <InputText rows="4" @bind-Value="newAdult.Sex"/>
</div>
<div class="form-group"><br/>
<p class="actions">
    <button class="btn btn-outline-dark" type="submit" @onclick="AddNewAdult">Create</button>
</p>
</div>
</EditForm>




@code {
   
    private Adult newAdult = new Adult();
    
    private void AddNewAdult()
    {
        FamilyService.AddAdult(newAdult);
        NavigationManager.NavigateTo("/AdultList");
    }
    
    
}